{% extends "base.twig" %}

{% block title %}{{ titulo | default('Ver Antena') }}{% endblock %}

{% block styles %}
    {{ parent() }}
    <link
            rel="stylesheet"
            href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
            integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
            crossorigin=""
    />

    <style>
        #map {
            height: 400px;
            width: 100%;
        }
    </style>
{% endblock %}

{% block content %}
    <div class="container py-4 bg-white">

        <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
                <h2 class="mb-0 color-1">{{ titulo | default('Ver Antena') }}</h2>
            </div>

            <div class="d-flex gap-2">
                <a href="{{ BASE_URL }}/antena/editar/{{ antena.id_antena }}" class="btn btn-outline-warning">
                    <i class="bi bi-pencil-square"></i> Editar
                </a>
                <a href="{{ BASE_URL }}/antena/excluir/{{ antena.id_antena }}"
                   class="btn btn-outline-danger"
                   onclick="return confirm('Deseja realmente excluir esta antena?')">
                    <i class="bi bi-trash"></i> Excluir
                </a>
                <a href="{{ BASE_URL }}/antena" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Voltar
                </a>
            </div>
        </div>

        {# 1) DETALHES ACIMA (100% largura) #}
        <div class="card card-full mt-5 mb-3">
            <div class="card-header color-3">
                <strong>Detalhes da Antena</strong>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4 col-md-3 meta-label">Descrição</dt>
                    <dd class="col-sm-8 col-md-9">{{ antena.descricao }}</dd>

                    <dt class="col-sm-4 col-md-3 meta-label">UF</dt>
                    <dd class="col-sm-8 col-md-9">
                        {{ antena.uf }}{% if antena.uf_descricao %} — {{ antena.uf_descricao }}{% endif %}
                    </dd>

                    {% if antena.endereco %}
                        <dt class="col-sm-4 col-md-3 meta-label">Endereço</dt>
                        <dd class="col-sm-8 col-md-9">{{ antena.endereco }}</dd>
                    {% endif %}

                    <dt class="col-sm-4 col-md-3 meta-label">Latitude</dt>
                    <dd class="col-sm-8 col-md-9 copyable" data-copy="{{ antena.latitude }}">{{ antena.latitude }}</dd>

                    <dt class="col-sm-4 col-md-3 meta-label">Longitude</dt>
                    <dd class="col-sm-8 col-md-9 copyable" data-copy="{{ antena.longitude }}">{{ antena.longitude }}</dd>

                    {% set implantacao = antena.data_implantacao | default(antena.data_impantacao) %}
                    {% if implantacao %}
                        <dt class="col-sm-4 col-md-3 meta-label">Implantação</dt>
                        <dd class="col-sm-8 col-md-9">{{ implantacao | date('d/m/Y H:i') }}</dd>
                    {% endif %}

                    {% if antena.status %}
                        <dt class="col-sm-4 col-md-3 meta-label">Status</dt>
                        <dd class="col-sm-8 col-md-9">
                        <span class="badge {{ antena.status in ['ATIVA','ATIVO'] ? 'bg-success' : 'bg-secondary' }}">
                            {{ antena.status }}
                        </span>
                        </dd>
                    {% endif %}

                    {% if antena.observacao %}
                        <dt class="col-sm-4 col-md-3 meta-label">Observações</dt>
                        <dd class="col-sm-8 col-md-9">{{ antena.observacao }}</dd>
                    {% endif %}
                </dl>
            </div>
        </div>

        {# 2) MAPA (100% largura) #}
        <div class="card mt-5 mb-3">
            <div class="card-header p-0">
                <button class="btn btn-link w-100 text-start px-3 py-2 d-flex align-items-center color-3"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#mapaantena"
                        aria-expanded="true"
                        aria-controls="mapaantena">
                    <strong>Mapa</strong>
                    <span class="ms-auto toggle-caret" aria-hidden="true">▼</span>
                </button>
            </div>
            <div id="mapaantena" class="collapse hidden">
            <div class="card-body p-0">
                <iframe
                        id="iframeAntenaMapa"
                        name="iframeAntenaMapa"
                        src="{{ BASE_URL }}/antena/mapa/{{ antena.id_antena }}"
                        class="w-100 border rounded"
                        style="height: 520px;">
                </iframe>
            </div>
            <div class="card-footer d-flex flex-wrap gap-2">
                <a class="btn btn-sm btn-outline-primary"
                   href="https://www.google.com/maps/search/?api=1&query={{ antena.latitude }},{{ antena.longitude }}"
                   target="_blank" rel="noopener">
                    Abrir no Google Maps
                </a>
                <a class="btn btn-sm btn-outline-secondary"
                   href="https://www.openstreetmap.org/?mlat={{ antena.latitude }}&mlon={{ antena.longitude }}#map=18/{{ antena.latitude }}/{{ antena.longitude }}"
                   target="_blank" rel="noopener">
                    Abrir no OSM
                </a>
            </div>
            </div>
        </div>

        {# 3) IMAGEM (100% largura) #}
        <div class="card mt-5 mb-3">
            <div class="card-header p-0">
                <button class="btn btn-link w-100 text-start px-3 py-2 d-flex align-items-center color-3"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#fotoantena"
                        aria-expanded="true"
                        aria-controls="fotoantena">
                    <strong>Foto</strong>
                    <span class="ms-auto toggle-caret" aria-hidden="true">▼</span>
                </button>
            </div>
            <div id="fotoantena" class="collapse hidden">
                <div class="card-body p-2">
                    {% if antena.foto_path is not empty %}
                        <img src="{{ antena.foto_path }}" alt="Foto da antena" class="img-fluid rounded thumb-fit">
                    {% else %}
                        <p class="text-muted small">Sem foto disponível</p>
                    {% endif %}
                </div>
            </div>

    </div>
    <br><br>
{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
            integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
            crossorigin=""></script>
    <script>
        // Definir coordenadas (Campo Grande - MS, por exemplo)
        const latitude = -20.4697;
        const longitude = -54.6201;

        // Inicializar o mapa
        const map = L.map('map').setView([latitude, longitude], 13);

        // Adicionar o mapa base (OpenStreetMap)
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            maxZoom: 19,
            attribution: '© OpenStreetMap'
        }).addTo(map);

        // Adicionar marcador
        const marker = L.marker([latitude, longitude]).addTo(map);

        // Popup opcional
        marker.bindPopup('<b>Campo Grande - MS</b><br>Latitude: ' + latitude + '<br>Longitude: ' + longitude).openPopup();
    </script>
{% endblock %}
