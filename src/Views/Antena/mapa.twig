<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Exemplo Leaflet</title>

    <!-- CSS do Leaflet -->
    <link
            rel="stylesheet"
            href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
            integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
            crossorigin=""
    />

    <style>
        #map {
            height: 500px;
            width: 100%;
        }
    </style>
</head>
<body>
<div id="map"></div>

<!-- JS do Leaflet -->
<script
        src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
        integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
        crossorigin=""
></script>

<script>
    const latitude = {{ antena.latitude }};
    const longitude = {{ antena.longitude }};

    // Inicializar o mapa
    const map = L.map('map').setView([latitude, longitude], 5);

    // Adicionar o mapa base (OpenStreetMap)
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        maxZoom: 19,
        attribution: 'Â© OpenStreetMap'
    }).addTo(map);

    // Adicionar marcador
    const marker = L.marker([latitude, longitude]).addTo(map);

    // Popup opcional
    marker.bindPopup('<b>{{ antena.uf }} - {{ antena.descricao }};</b><br>Latitude: ' + latitude + '<br>Longitude: ' + longitude).openPopup();
</script>
</body>
</html>
