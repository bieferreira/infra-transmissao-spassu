{% extends "base.twig" %}

{% block title %}{{ titulo | default('Lista de Antenas') }}{% endblock %}

{% block content %}
    <div class="container py-4 bg-white">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="mb-0 color-1">{{ titulo | default('Lista de Antenas') }}</h2>
            <a href="{{ BASE_URL }}/antena/cadastrar" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Nova Antena
            </a>
        </div>

        {# Ranking Top 5 UFs #}
        <div class="card mt-5 mb-3">
            <div class="card-header p-0">
                <button class="btn btn-link w-100 text-start px-3 py-2 d-flex align-items-center color-3"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#rankingUfs"
                        aria-expanded="true"
                        aria-controls="rankingUfs">
                    <strong>Estados com maior incidência de antenas</strong>
                    <span class="ms-auto toggle-caret" aria-hidden="true">▼</span>
                </button>
            </div>

            <div id="rankingUfs" class="collapse show">
                <ul class="list-group list-group-flush">
                    {% if ranking_ufs is empty %}
                        <li class="list-group-item text-muted">Sem dados para exibir.</li>
                    {% else %}
                        {% for r in ranking_ufs %}
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div class="d-flex align-items-center">
                                    <span class="badge bg-secondary me-2">{{ loop.index }}</span>
                                    <strong class="ms-5">{{ r.uf }}</strong>
                                    <span class="ms-5 text-muted">{{ r.uf_descricao }}</span>
                                </div>
                                <div class="d-flex align-items-center gap-2">
                                    <span class="badge bg-dark ms-5">{{ r.total }}</span>
                                    <a class="btn btn-sm btn-outline-primary ms-5"
                                       href="{{ BASE_URL }}/antena?uf={{ r.uf }}{% if q %}&q={{ q }}{% endif %}">
                                        Listar
                                    </a>
                                </div>
                            </li>
                        {% endfor %}
                    {% endif %}
                </ul>
            </div>
        </div>

        <form method="get" class="row g-2 mt-5 mb-3">
            <div class="col-md-4">
                <input type="text" name="q" value="{{ q|default('') }}" class="form-control" placeholder="Buscar descrição...">
            </div>
            <div class="col-md-2">
                <input type="text" name="uf" value="{{ uf|default('') }}" class="form-control" placeholder="UF">
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-outline-secondary w-100">
                    <i class="bi bi-search"></i> Filtrar
                </button>
            </div>
        </form>

        {% if antenas is empty %}
            <div class="alert alert-warning text-center">
                Nenhuma antena encontrada.
            </div>
        {% else %}
            <p class="text-muted small text-end">
                Mostrando {{ antenas|length }} de {{ total }} registros | Página {{ page }} de {{ pages }}
            </p>

            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-light">
                    <tr>
                        <th>Descrição</th>
                        <th>Latitude</th>
                        <th>Longitude</th>
                        <th>UF</th>
                        <th>Data Implantação</th>
                        <th class="text-center">Ações</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for a in antenas %}
                        <tr>
                            <td>{{ a.descricao }}</td>
                            <td>{{ a.latitude }}</td>
                            <td>{{ a.longitude }}</td>
                            <td>{{ a.uf }}</td>
                            <td>{{ a.data_impantacao|date('d/m/Y H:i') }}</td>
                            <td class="text-center">
                                <a href="{{ BASE_URL }}/antena/mostrar/{{ a.id }}" class="btn btn-sm btn-outline-info ms-3">Ver</a>
                                <a href="{{ BASE_URL }}/antena/editar/{{ a.id }}" class="btn btn-sm btn-outline-warning ms-3">Editar</a>
                                <a href="{{ BASE_URL }}/antena/excluir/{{ a.id }}" class="btn btn-sm btn-outline-danger ms-3" onclick="return confirm('Deseja realmente excluir esta antena?')">Excluir</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            {# Paginação #}
            {% if pages > 1 %}
                {% set start = page - 5 %}
                {% set end   = page + 4 %}

                {# Corrige limites — não deixar sair do intervalo #}
                {% if start < 1 %}
                    {% set start = 1 %}
                    {% set end = 10 %}
                {% endif %}
                {% if end > pages %}
                    {% set end = pages %}
                    {% if end - 9 > 0 %}
                        {% set start = end - 9 %}
                    {% endif %}
                {% endif %}

                <nav aria-label="Navegação de páginas">
                    <ul class="pagination justify-content-center mt-4">

                        {# Botão primeiro #}
                        <li class="page-item {{ page == 1 ? 'disabled' : '' }}">
                            <a class="page-link" href="?page=1{% if q %}&q={{ q }}{% endif %}{% if uf %}&uf={{ uf }}{% endif %}" aria-label="Primeiro">
                                <span aria-hidden="true">&lt;&lt;</span>
                            </a>
                        </li>

                        {# Botão anterior #}
                        <li class="page-item {{ page == 1 ? 'disabled' : '' }}">
                            <a class="page-link" href="?page={{ page - 1 }}{% if q %}&q={{ q }}{% endif %}{% if uf %}&uf={{ uf }}{% endif %}" aria-label="Anterior">
                                <span aria-hidden="true">&lt;</span>
                            </a>
                        </li>

                        {# Exibe as páginas dentro da janela calculada #}
                        {% for p in start..end %}
                            <li class="page-item {{ p == page ? 'active' : '' }}">
                                <a class="page-link" href="?page={{ p }}{% if q %}&q={{ q }}{% endif %}{% if uf %}&uf={{ uf }}{% endif %}">
                                    {{ p }}
                                </a>
                            </li>
                        {% endfor %}

                        {# Botão próximo #}
                        <li class="page-item {{ page == pages ? 'disabled' : '' }}">
                            <a class="page-link" href="?page={{ page + 1 }}{% if q %}&q={{ q }}{% endif %}{% if uf %}&uf={{ uf }}{% endif %}" aria-label="Próximo">
                                <span aria-hidden="true">&gt;</span>
                            </a>
                        </li>

                        {# Botão último #}
                        <li class="page-item {{ page == pages ? 'disabled' : '' }}">
                            <a class="page-link" href="?page={{ pages }}{% if q %}&q={{ q }}{% endif %}{% if uf %}&uf={{ uf }}{% endif %}" aria-label="Próximo">
                                <span aria-hidden="true">&gt;&gt;</span>
                            </a>
                        </li>
                    </ul>
                    <br><br>
                </nav>
            {% endif %}

        {% endif %}
    </div>
{% endblock %}
